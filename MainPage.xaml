<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemperatureConverter.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="Celsius to Fahrenheit Converter"
               FontSize="24"
               HorizontalOptions="Center" />

            <!-- Entry for Celsius input -->
            <Entry x:Name="CelsiusEntry"
               Placeholder="Enter temperature in Celsius"
               Keyboard="Numeric" />

            <!-- Button to trigger conversion -->
            <Button Text="Convert to Fahrenheit"
                Clicked="OnConvertButtonClicked" />

            <!-- Label to display Fahrenheit result -->
            <Label x:Name="ResultLabel"
               FontSize="20"
               TextColor="Blue"
               HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
